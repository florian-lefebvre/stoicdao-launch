---
interface Props {
  class?: string;
  direction?: "left" | "right";
}

const { class: className, direction = "left" } = Astro.props;
---

<div
  class:list={[
    "pointer-events-none relative flex gap-[--gap] [--gap:theme(spacing.2)] overflow-hidden",
    direction === "right" && "[--animation-direction:reverse]",
    className,
  ]}
>
  <div
    class="animate-marquee flex min-w-full shrink-0 items-center justify-around gap-[--gap] [animation-direction:--animation-direction]"
  >
    <slot />
  </div>
  <div
    aria-hidden="true"
    class="animate-marquee flex min-w-full shrink-0 items-center justify-around gap-[--gap] [animation-direction:--animation-direction]"
  >
    <slot />
  </div>
</div>
